<div class="min-h-screen flex flex-col">
  <%= render "shared/header" %>
  <div class="flex-1 flex flex-col items-center justify-center px-4 py-8">
    <%= image_tag @image, alt: "診断結果のパロット", class: "w-40 h-40 sm:w-56 sm:h-56 md:w-72 md:h-72 mb-6 shake-on-hover object-contain" %>
    <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-4 text-center"><%= @headline %></h2>
    <div class="bg-white rounded-lg shadow-md p-4 sm:p-8 max-w-lg w-full md:px-6 md:py-5">
      <p class="text-base sm:text-lg leading-relaxed whitespace-pre-line"><%= @description %></p>
    </div>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-8">
      <div>
        <% tweet_text = "#{@headline}\n#PartyParrot診断" %>
        <% tweet_url = request.original_url %>
        <%= link_to "Xでシェアする",
              "https://twitter.com/intent/tweet?text=#{ERB::Util.url_encode(tweet_text)}&url=#{ERB::Util.url_encode(tweet_url)}",
              target: "_blank", rel: "noopener",
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded block text-center" %>
      </div>
      <div>
        <%= link_to "もう一度診断する", new_diagnosis_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded block text-center" %>
      </div>
    </div>
  </div>
  <%= render "shared/footer" %>
</div>